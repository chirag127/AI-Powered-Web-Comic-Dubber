{
  "manifest_version": 3,
  "name": "AI-Powered Web Comic Dubber",
  "version": "1.0",
  "description": "Detects speech bubbles in web comics and generates AI-based voiceovers",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_icon": {
      "16": "popup/images/icon16.png",
      "48": "popup/images/icon48.png",
      "128": "popup/images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/*", "popup/images/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
